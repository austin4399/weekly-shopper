{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "types": [
      "@nuxt/types",
      "@nuxtjs/axios",
      "@types/node",
      "@nuxtjs/vuetify",
      "@nuxt/vue-app",
      "jest"
    ],
    "paths": {
      "@/*": ["./*"],
      "~/*": ["./*"]
    },
    "lib": ["esnext", "dom", "dom.iterable"]
  },
  "include": ["**/*.ts", "**/*.vue", "tests/**/*.ts"],
  "exclude": ["node_modules", ".nuxt", "dist", "**/*.spec.ts"]
}
